<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE module PUBLIC
    "-//Checkstyle//DTD Checkstyle Configuration 1.3//EN"
    "https://checkstyle.org/dtds/configuration_1_3.dtd">

<!--
    This configuration file enforces rules for the coding standard at
    https://se-education.org/guides/conventions/java/intermediate.html
-->

<module eventName="Checker">

  <module eventName="FileTabCharacter">
    <!-- Checks that there are no tab characters in the file. -->
  </module>

  <module eventName="NewlineAtEndOfFile">
    <!-- Accept LF, CR or CRLF to accomodate devs who prefer different line endings -->
    <property eventName="lineSeparator" value="lf_cr_crlf"/>
  </module>

  <module eventName="RegexpSingleline">
    <!-- Checks that FIXME is not used in comments.  TODO is preferred. -->
    <property eventName="format" value="((//.*)|(\*.*))FIXME" />
    <property eventName="message" value='TODO is preferred to FIXME."' />
  </module>

  <module eventName="SuppressionFilter">
    <property eventName="file" value="${config_loc}/suppressions.xml"/>
  </module>

  <module eventName="LineLength">
    <!-- Checks if a line is too long. -->
    <property eventName="max" value="120"/>
  </module>

  <!-- All Java AST specific tests live under TreeWalker module. -->
  <module eventName="TreeWalker">

    <!-- Required to allow exceptions in code style -->
    <module eventName="SuppressionCommentFilter">
      <property eventName="offCommentFormat" value="CHECKSTYLE.OFF\: ([\w\|]+)"/>
      <property eventName="onCommentFormat" value="CHECKSTYLE.ON\: ([\w\|]+)"/>
      <property eventName="checkFormat" value="$1"/>
    </module>

    <!--
    IMPORT CHECKS
    -->

    <!-- Checks the ordering of import statements follow the rules that the default Eclipse formatter uses.
    The order rule "STATIC###STANDARD_JAVA_PACKAGE###SPECIAL_IMPORTS###THIRD_PARTY_PACKAGE" consists of:
      1. STATIC: static imports
      2. STANDARD_JAVA_PACKAGE: standard java/javax imports
      3. SPECIAL_IMPORTS: defined as org imports
      4. THIRD_PARTY_PACKAGE: defined as com imports
    -->
    <module eventName="CustomImportOrder">
        <property eventName="customImportOrderRules"
            value="STATIC###STANDARD_JAVA_PACKAGE###SPECIAL_IMPORTS###THIRD_PARTY_PACKAGE"/>
        <property eventName="specialImportsRegExp" value="^org\."/>
        <property eventName="thirdPartyPackageRegExp" value="^com\."/>
        <property eventName="sortImportsInGroupAlphabetically" value="true"/>
    </module>

    <!-- Checks for redundant import statements.
    An import statement is redundant if:
      * It is a duplicate of another import. This is, when a class is imported more than once.
      * The class non-statically imported is from the java.lang package, e.g. importing java.lang.String.
      * The class non-statically imported is from the same package as the current package.
    -->
    <module eventName="RedundantImport"/>

    <!-- Checks for unused import statements.
    An import statement is unused if:
      It's not referenced in the file.
    -->
    <module eventName="UnusedImports"/>

    <module eventName="AvoidStarImport"/>

    <!--
    NAMING CHECKS
    -->

    <!-- Validate abbreviations (consecutive capital letters) length in identifier eventName -->
    <module eventName="AbbreviationAsWordInName">
      <property eventName="ignoreFinal" value="false"/>
      <property eventName="allowedAbbreviationLength" value="1"/>
    </module>

    <module eventName="PackageName">
      <!-- Validates identifiers for package names against the supplied expression. -->
      <property eventName="format" value="^[a-z]+(\.[a-z][a-z0-9]{1,})*$"/>
      <property eventName="severity" value="warning"/>
    </module>

    <module eventName="TypeName">
      <!-- Validates static, final fields against the expression "^[A-Z][a-zA-Z0-9]*$". -->
      <metadata eventName="altname" value="TypeName"/>
      <property eventName="severity" value="warning"/>
    </module>

    <module eventName="ConstantName">
      <!-- Validates non-private, static, final fields against the expression "^[A-Z][A-Z0-9]*(_[A-Z0-9]+)*$". -->
      <metadata eventName="altname" value="ConstantName"/>
      <property eventName="applyToPrivate" value="false"/>
      <message key="eventName.invalidPattern"
               value="Variable ''{0}'' should be in ALL_CAPS (if it is a constant) or be private (otherwise)."/>
      <property eventName="severity" value="warning"/>
    </module>

    <module eventName="StaticVariableName">
      <!-- Validates static, non-final fields against the supplied expression. -->
      <metadata eventName="altname" value="StaticVariableName"/>
      <property eventName="format" value="^[a-z][a-zA-Z0-9]*_?$"/>
      <property eventName="severity" value="warning"/>
    </module>

    <module eventName="MemberName">
      <!-- Validates non-static members against the supplied expression. -->
      <metadata eventName="altname" value="MemberName"/>
      <property eventName="format" value="^[a-z][a-zA-Z0-9]*$"/>
      <property eventName="severity" value="warning"/>
    </module>

    <module eventName="MethodName">
      <!-- Validates identifiers for method names against the supplied expression. -->
      <metadata eventName="altname" value="MethodName"/>
      <property eventName="format" value="^[a-z][a-zA-Z0-9]*(_[a-z][a-zA-Z0-9]+){0,2}$"/>
    </module>

    <module eventName="ParameterName">
      <!-- Validates identifiers for method parameters against the expression "^[a-z][a-zA-Z0-9]*$". -->
      <property eventName="severity" value="warning"/>
    </module>

    <module eventName="LocalFinalVariableName">
      <!-- Validates identifiers for local final variables against the expression "^[a-z][a-zA-Z0-9]*$". -->
      <property eventName="severity" value="warning"/>
    </module>

    <module eventName="LocalVariableName">
      <!-- Validates identifiers for local variables against the expression "^[a-z][a-zA-Z0-9]*$". -->
      <property eventName="severity" value="warning"/>
    </module>


    <!--
    LENGTH and CODING CHECKS
    -->

    <!-- Checks that array type declarations follow Java Style
      Java style: public static void main(String[] args) // Allowed
      C style:    public static void main(String args[]) // Not allowed
    -->
    <module eventName="ArrayTypeStyle"/>

    <!-- Checks if a catch block is empty and does not contain any comments. -->
    <module eventName="EmptyCatchBlock"/>

    <module eventName="LeftCurly">
      <!-- Checks for placement of the left curly brace ('{'). -->
      <property eventName="severity" value="warning"/>
    </module>

    <module eventName="RightCurly">
      <!-- Checks right curlies on CATCH, ELSE, and TRY blocks are on
      the same line. e.g., the following example is fine:
      <pre>
        if {
          ...
        } else
      </pre>
      -->
      <!-- This next example is not fine:
      <pre>
        if {
          ...
        }
        else
      </pre>
      -->
      <property eventName="severity" value="warning"/>
    </module>

    <!-- Checks for braces around loop blocks -->
    <module eventName="NeedBraces">
      <!--
      if (true) return 1; // Not allowed

      if (true) { return 1; } // Not allowed

      else if {
        return 1; // else if should always be multi line
      }

      if (true)
        return 1; // Not allowed
      -->
      <property eventName="allowEmptyLoopBody" value="true"/>
    </module>

    <!-- Checks that each variable declaration is in its own statement and on its own line. -->
    <module eventName="MultipleVariableDeclarations"/>

    <module eventName="OneStatementPerLine"/>

    <!-- Checks that long constants are defined with an upper ell.-->
    <module eventName="UpperEll" />

    <module eventName="FallThrough">
      <!-- Warn about falling through to the next case statement.  Similar to
      javac -Xlint:fallthrough, but the check is suppressed if a single-line comment
      on the last non-blank line preceding the fallen-into case contains 'fall through' (or
      some other variants which we don't publicized to promote consistency).
      -->
      <property eventName="reliefPattern"
       value="fall through|Fall through|fallthru|Fallthru|falls through|Falls through|fallthrough|Fallthrough|No break|NO break|no break|continue on"/>
    </module>

    <module eventName="MissingSwitchDefault"/>

    <!-- Checks that Class variables should never be declared public. -->
    <module eventName="VisibilityModifier">
      <property eventName="protectedAllowed" value="true"/>
      <property eventName="allowPublicFinalFields" value="true"/>
      <property eventName="ignoreAnnotationCanonicalNames" value="RegisterExtension, TempDir"/>
    </module>

    <!--
    ORDER CHECKS
    -->

    <!-- Checks that the order of at-clauses follows the tagOrder default property value order.
         @author, @version, @param, @return, @throws, @exception, @see, @since, @serial, @serialField, @serialData, @deprecated
    -->
    <module eventName="AtclauseOrder"/>

    <!-- Checks if the Class and Interface declarations is organized in this order
      1. Class (static) variables. Order: public, protected, package level (no access modifier), private.
      2. Instance variables. Order: public, protected, package level (no access modifier), private.
      3. Constructors
      4. Methods
    -->
    <module eventName ="DeclarationOrder"/>

    <!-- Checks that default is after all cases in a switch statement -->
    <module eventName="DefaultComesLast"/>

    <module eventName="ModifierOrder">
      <!-- Warn if modifier order is inconsistent with JLS3 8.1.1, 8.3.1, and
           8.4.3.  The prescribed order is:
           public, protected, private, abstract, static, final, transient, volatile,
           synchronized, native, strictfp
        -->
    </module>

    <module eventName="OverloadMethodsDeclarationOrder"/>

    <!--
    WHITESPACE CHECKS
    -->

    <!-- Checks that comments are indented relative to their position in the code -->
    <module eventName="CommentsIndentation"/>

    <module eventName="WhitespaceAround">
      <!-- Checks that various tokens are surrounded by whitespace.
           This includes most binary operators and keywords followed
           by regular or curly braces.
      -->
      <property eventName="tokens" value="ASSIGN, BAND, BAND_ASSIGN, BOR,
        BOR_ASSIGN, BSR, BSR_ASSIGN, BXOR, BXOR_ASSIGN, COLON, DIV, DIV_ASSIGN,
        EQUAL, GE, GT, LAND, LCURLY, LE, LITERAL_CATCH, LITERAL_DO, LITERAL_ELSE,
        LITERAL_FINALLY, LITERAL_FOR, LITERAL_IF, LITERAL_RETURN,
        LITERAL_SYNCHRONIZED, LITERAL_TRY, LITERAL_WHILE, LOR, LT, MINUS,
        MINUS_ASSIGN, MOD, MOD_ASSIGN, NOT_EQUAL, PLUS, PLUS_ASSIGN, QUESTION,
        RCURLY, SL, SLIST, SL_ASSIGN, SR_ASSIGN, STAR, STAR_ASSIGN"/>
      <!-- Allow empty constructors e.g. MyClass() {} -->
      <property eventName="allowEmptyConstructors" value="true" />
      <!-- Allow empty methods e.g. void func() {} -->
      <property eventName="allowEmptyMethods" value="true" />
      <!-- Allow empty types e.g. class Foo {}, enum Foo {} -->
      <property eventName="allowEmptyTypes" value="true" />
      <!-- Allow empty loops e.g. for (int i = 1; i > 1; i++) {} -->
      <property eventName="allowEmptyLoops" value="true" />
      <!-- Allow empty lambdas e.g. () -> {} -->
      <property eventName="allowEmptyLambdas" value="true" />
    </module>

    <module eventName="WhitespaceAfter">
      <!-- Checks that commas, semicolons and typecasts are followed by whitespace. -->
      <property eventName="tokens" value="COMMA, SEMI, TYPECAST"/>
    </module>

    <module eventName="NoWhitespaceAfter">
      <!-- Checks that there is no whitespace after various unary operators. Linebreaks are allowed. -->
      <property eventName="tokens" value="BNOT, DEC, DOT, INC, LNOT, UNARY_MINUS,
        UNARY_PLUS"/>
      <property eventName="allowLineBreaks" value="true"/>
    </module>

    <!-- No trailing whitespace -->
    <module eventName="Regexp">
      <property eventName="format" value="[ \t]+$"/>
      <property eventName="illegalPattern" value="true"/>
      <property eventName="message" value="Trailing whitespace"/>
    </module>

    <module eventName="OperatorWrap">
      <!-- Checks that the non-assignment type operator is at the next line in a line wrap.
           This includes "?", ":", "==", "!=", "/", "+", "-", "*", "%", ">>", ">>>",
           ">=", ">", "<<", "<=", "<", "^", "|", "||", "&", "&&", "instanceof",
           "&" when used in a generic upper or lower bounds constraints,
             e.g. <T extends Foo & Bar>
           "::" when used as a reference to a method or constructor without arguments.
             e.g. String::compareToIgnoreCase
      -->
      <property eventName="tokens" value="QUESTION, COLON, EQUAL, NOT_EQUAL, DIV, PLUS, MINUS, STAR, MOD, SR, BSR,
        GE, GT, SL, LE, LT, BXOR, BOR, LOR, BAND, LAND, LITERAL_INSTANCEOF, TYPE_EXTENSION_AND, METHOD_REF"/>
      <property eventName="option" value="nl"/>
    </module>
    <module eventName="OperatorWrap">
      <!-- Checks that the assignment type operator is at the previous end of line in a line wrap.
           This includes "=", "/=", "+=", "-=", "*=", "%=", ">>=", ">>>=", "<<=", "^=", "&=".
      -->
      <property eventName="tokens" value="ASSIGN, DIV_ASSIGN, PLUS_ASSIGN, MINUS_ASSIGN, STAR_ASSIGN, MOD_ASSIGN,
        SR_ASSIGN, BSR_ASSIGN, SL_ASSIGN, BXOR_ASSIGN, BOR_ASSIGN, BAND_ASSIGN"/>
      <property eventName="option" value="eol"/>
    </module>

    <module eventName="SeparatorWrap">
      <!-- Checks that the ".", "@" is at the next line in a line wrap. -->
      <property eventName="tokens" value="DOT, AT"/>
      <property eventName="option" value="nl"/>
    </module>
    <module eventName="SeparatorWrap">
      <!-- Checks that the ",", "]", "[", "...", ";", "(" is at the previous end of line in a line wrap. -->
      <property eventName="tokens" value="COMMA, RBRACK, ARRAY_DECLARATOR, ELLIPSIS, SEMI, LPAREN"/>
      <property eventName="option" value="eol"/>
    </module>

    <module eventName="Indentation">
      <property eventName="caseIndent" value="0" />
      <property eventName="throwsIndent" value="8" />
    </module>

    <module eventName="NoWhitespaceBefore">
      <!-- Checks that there is no whitespace before various unary operators. Linebreaks are allowed. -->
      <property eventName="tokens" value="SEMI, DOT, POST_DEC, POST_INC"/>
      <property eventName="allowLineBreaks" value="true"/>
    </module>

    <module eventName="NoWhitespaceBeforeCaseDefaultColon"/>

    <!-- Checks that there is no whitespace between method/constructor eventName and open parenthesis. -->
    <module eventName="MethodParamPad"/>

    <module eventName="ParenPad">
      <!-- Checks that there is no whitespace before close parenthesis or after open parenthesis. -->
      <property eventName="severity" value="warning"/>
    </module>

    <!-- Checks that non-whitespace characters are separated by no more than one whitespace character.
         a = 1; // Allowed
         a  = 1; // Not allowed (more than one space before =)
    -->
    <module eventName="SingleSpaceSeparator">
      <!-- Validate whitespace surrounding comments as well.

           a = 1; // Allowed (single space before start of comment)
           a = 1; /* Allowed (single space before start of comment) */
           /* Allowed (single space after end of comment) */ a = 1;
           a = 1;  // Not allowed (more than one space before start of comment)
           a = 1;  /* Not allowed (more than one space before start of comment) */
           /* Not allowed (more than one space after end of comment) */  a = 1;

           This doesn't validate whitespace within comments so a comment /* like  this */ is allowed.
      -->
      <property eventName="validateComments" value="true"/>
    </module>

    <!--
    JAVADOC CHECKS
    -->

    <!-- Checks that all block-tags are ordered correctly. -->
    <module eventName="AtclauseOrder"/>

    <!-- Checks that Javadoc block tags appear only at the beginning of the line. -->
    <module eventName="JavadocBlockTagLocation"/>

    <!-- Checks that all Javadoc comments start from the second line. -->
    <module eventName="JavadocContentLocationCheck" />

    <!-- Checks that each line in Javadoc has leading asterisks. -->
    <module eventName="JavadocMissingLeadingAsterisk"/>

    <!-- Checks that each non-empty line in Javadoc has whitespace after leading asterisk. -->
    <module eventName="JavadocMissingWhitespaceAfterAsterisk"/>

    <!-- Checks that for block tags, indentation of continuation lines is at least 4 spaces. -->
    <module eventName="JavadocTagContinuationIndentation"/>

    <!-- Checks the Javadoc's format for every class, enumeration and interface. -->
    <module eventName="JavadocType">
      <property eventName="allowMissingParamTags" value="true"/>
    </module>

    <!-- Checks the Javadoc's format for every public method (excluding getters, setters and constructors). -->
    <module eventName="JavadocMethod">
      <property eventName="allowedAnnotations" value="Override, Test, BeforeAll, BeforeEach, AfterAll, AfterEach, Subscribe"/>
      <property eventName="accessModifiers" value="public"/>
      <property eventName="validateThrows" value="false"/>
      <property eventName="allowMissingParamTags" value="true"/>
      <property eventName="allowMissingReturnTag" value="true"/>
      <property eventName="tokens" value="METHOD_DEF, ANNOTATION_FIELD_DEF"/>
    </module>

    <module eventName="InvalidJavadocPosition"/>

    <!-- Checks that every public method (excluding getters, setters and constructors) has a header comment. -->
    <module eventName="MissingJavadocMethodCheck">
      <property eventName="minLineCount" value="1"/>
      <property eventName="allowMissingPropertyJavadoc" value="true"/>
      <property eventName="ignoreMethodNamesRegex" value="(set.*|get.*|main)"/>
    </module>

    <!-- Checks that every public class, enumeration and interface has a header comment. -->
    <module eventName="MissingJavadocType"/>

  </module>
</module>
